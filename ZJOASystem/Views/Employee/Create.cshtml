@model ZJOASystem.Models.Employee

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_CREATE")</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE")</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label(ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_NAME"), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.Label(ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_ENCODE"), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Encode)
                @Html.ValidationMessageFor(model => model.Encode)
            </div>

        </div>
        <div class="form-group">
            @Html.Label(ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_TELEPHONE"), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Telephone)
                @Html.ValidationMessageFor(model => model.Telephone)
            </div>
        </div>

        <div class="form-group">
            @Html.Label(ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_EMAIL"), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.Label(ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_ADDRESS"), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label(ZJOASystem.Controllers.ResourceReader.GetString("DEPARTMENTLIST"), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ZJOASystem.Controllers.EmployeeController.RenderDepartmentList(this.Model)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ZJOASystem.Controllers.ResourceReader.GetString("SUBMIT")" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(ZJOASystem.Controllers.ResourceReader.GetString("EMPLOYEE_RETURNLIST"), "EmployeeIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
