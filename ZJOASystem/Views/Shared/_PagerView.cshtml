@using ZJOASystem.Models
@model ZJOASystem.Models.BasePageModel

 @{if (Model != null && Model.TotalPages != 0)
 {
     <ul class="pagination">
    @{

        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, this.Model, Model.CurrentIndex - 1, false, Model.IsHasPrePage, "«")

        if (Model.TotalPages <= Model.DisplayMaxPages)
        {
            for (int i = 1; i < Model.TotalPages; i++)
            {
                @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url,Model, i, i == Model.CurrentIndex);
            }
        }
        else
        {
            if (Model.CurrentIndex - 1 < 5)
            {
                for (int i = 1; i <= Model.DisplayMaxPages - 1; i++)
                {
                    @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, i, i == Model.CurrentIndex);
                }
                @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, Model.CurrentIndex, false, false, "...");
            }
            else
            {
                @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, 1);

                if (Model.CurrentIndex + (Model.DisplayMaxPages - 2) / 2 >= Model.TotalPages)
                {
                    int page = Model.CurrentIndex - (Model.DisplayMaxPages - Model.TotalPages + Model.CurrentIndex - 1);

                    if (page > 1)
                    {
                        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, Model.CurrentIndex, false, false, "...");
                    }

                    for (int i = page + 1; i < Model.TotalPages; i++)
                    {
                        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, i, i == Model.CurrentIndex);
                    }
                }
                else
                {
                    int page = Model.CurrentIndex - (Model.DisplayMaxPages - 2) / 2;

                    if (page > 2)
                    {
                        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, Model.CurrentIndex, false, false, "...");
                    }

                    for (int i = page; i < Model.CurrentIndex + (Model.DisplayMaxPages - 2) / 2; i++)
                    {
                        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, i, i == Model.CurrentIndex);
                    }
                    @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, Model.CurrentIndex, false, false, "...");
                }
            }
        }

        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, Model.TotalPages, Model.TotalPages == Model.CurrentIndex)
        @ZJOASystem.Controllers.HtmlHelperExtensions.CreatePagerTag(this.Url, Model, Model.CurrentIndex + 1, false, Model.IsHasNextPage, "»")

    }
     </ul>

 }}
