@model ZJOASystem.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@Scripts.Render("~/bundles/jqwidgets/editor")

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { name = "mainForm", id = "mainForm" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">@ZJOASystem.Controllers.ResourceReader.GetString("ACTION_NUMBER")</label>
            <div id="jqxComboBox_productbase" style="float:left"></div>
            <div id="jqxComboBox_year" style="float:left"></div>
            <input type="text" id="input_batch" style="float:left" title="批号"/>
            <input type="text" id="input_serial" style="float:left" title="标识码" />
            @Html.Hidden("numberValue", ViewData["numberValue"], new { id = "numberValue" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" >@ZJOASystem.Controllers.ResourceReader.GetString("ACTION_EMPLOYEE")</label> 
                <div class="col-md-10">
                    <div style="float: left;" id="listBoxA">
                    </div>
                    @Html.Hidden("employeeValue", ViewData["employeeValue"], new { id = "employeeValue" })
                </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create" class="btn btn-default" onclick="saveData();" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(ZJOASystem.Controllers.ResourceReader.GetString("BACKTO_PRODUCTLIST"), "Index")
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var source =
        {
            dataType: "json",
            dataFields: [
                { name: 'Number', type: 'string' },
                { name: 'Name', type: 'string' }
            ],
            id: 'Number',
            url: 'GetProductBases'
        };

        
        var source_employees =
        {
            dataType: "json",
            dataFields: [
                { name: 'Encode', type: 'string' },
                { name: 'Name', type: 'string' }
            ],
            id: 'Encode',
            url: 'GetEmployeeList'
        };
        var dataAdapter = new $.jqx.dataAdapter(source);

        var dataAdapter_employee = new $.jqx.dataAdapter(source_employees);
        var yearsource = [
            "2016",
            "2017",
            "2018",
            "2019",
            "2020",
            "2021",
            "2022"];

        var source2 = [];
        // Create a jqxComboBox
        $("#jqxComboBox_productbase").jqxComboBox({displayMember: "Name", valueMember: "Number",  source: dataAdapter, width: '200px', height: '25px' });
        $("#jqxComboBox_year").jqxComboBox({ source: yearsource, width: '100px', height: '25px' });

        // Create a jqxListBox
        $("#listBoxA").jqxListBox({
            source: dataAdapter_employee, width: 200, height: 250, displayMember: "Name", valueMember: "Encode", multiple: true
        });

    });

    function saveData() {
        debugger;
        var items = $("#listBoxA").jqxListBox('getSelectedItems');
        var selection = "";
        for (var i = 0; i < items.length; i++) {
            selection += items[i].value + (i < items.length - 1 ? ", " : "");
        }
        document.getElementById("employeeValue").value = selection;

        var proItem = $("#jqxComboBox_productbase").jqxComboBox('getSelectedItem');
        var yearItem = $("#jqxComboBox_year").jqxComboBox('getSelectedItem');
        var batchValue = document.getElementById("input_batch").value;
        var serValue = document.getElementById("input_serial").value;
        document.getElementById("numberValue").value = proItem.value + yearItem.value + batchValue + serValue;

        debugger;
        document.forms["mainForm"].submit();
    }
</script>

